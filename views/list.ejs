<%- include("header") -%>
<div class="box" id="heading">
  <h1>
    <%= listTitle %>
  </h1>
</div>

<div class="box">

  <% newListItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <!-- when the checkbox is checked/unchecked the onChange event will run the javascript code
      // it will take the current form that the input is inside and post it to the '/delete' route.
      // To be able to access the checkbox input we have to assign a 'name' to it.-->
      <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
      <p>
        <%= item.name %>
      </p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>"></input>
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>

</div>
<%- include("footer") -%>
